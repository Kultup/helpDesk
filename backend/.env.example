# Налаштування бази даних (Локальна MongoDB на сервері)
MONGODB_URI=mongodb://localhost:27017/helpdesk

# JWT налаштування
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRE=30d

# Налаштування сервера
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://your-domain.com
API_BASE_URL=https://your-api-domain.com/api

# Ngrok налаштування (для локального тестування Telegram бота)
NGROK_AUTHTOKEN=your_ngrok_authtoken_here
NGROK_REGION=eu

# Telegram Bot налаштування
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook
TELEGRAM_GROUP_ID=your_telegram_group_id

# Налаштування файлів
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Налаштування безпеки
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Налаштування логування
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Налаштування для продакшену
SESSION_SECRET=your_super_secure_session_secret_here
CORS_ORIGIN=https://your-domain.com

# Налаштування Active Directory
AD_ENABLED=true
AD_LDAP_URL=ldap://your-ad-server:389
AD_ADMIN_DN=admin@your-domain.com
AD_ADMIN_PASSWORD=your_ad_password
AD_USER_SEARCH_BASE=dc=your-domain,dc=com
AD_COMPUTER_SEARCH_BASE=dc=your-domain,dc=com
AD_USERNAME_ATTRIBUTE=sAMAccountName
AD_TIMEOUT=5000